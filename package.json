{
  "name": "clawgate",
  "version": "0.1.0",
  "description": "Cross-agent messaging toolkit for OpenClaw",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "clawgate": "dist/scheduler/cli.js"
  },
  "scripts": {
    "build": "tsc && npm run fix:permissions",
    "dev": "tsc --watch",
    "start": "node dist/scheduler/cli.js",
    "test": "node --test dist/**/*.test.js",
    "lint": "tsc --noEmit",
    "fix:permissions": "chmod +x dist/scheduler/cli.js 2>/dev/null || true",
    "prepublishOnly": "npm run build",
    "install:global": "npm link"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "openclaw",
    "cron",
    "scheduler",
    "agent",
    "automation"
  ],
  "author": "Emma",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
